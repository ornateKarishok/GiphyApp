<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/giphyListFragment">

    <fragment
        android:id="@+id/giphyListFragment"
        android:name="com.mycompany.giphyapp.ui.GiphyListFragment"
        android:label="GiphyListFragment" >
        <action
            android:id="@+id/action_giphyListFragment_to_full_screen"
            app:destination="@id/full_screen" />
    </fragment>
    <fragment
        android:id="@+id/full_screen"
        android:name="com.mycompany.giphyapp.FullScreenFragment"
        android:label="fragment_full_screen"
        tools:layout="@layout/fragment_full_screen" >
        <action
            android:id="@+id/action_full_screen_to_giphyListFragment"
            app:destination="@id/giphyListFragment" />
    </fragment>
</navigation>